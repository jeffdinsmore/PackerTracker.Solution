@using PackerTracker.Models;
<!DOCTYPE html>
<html>
  <head>
    <title>Packer Tracker</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div class="container"><br>
      <div class="row">
        <div class="col-lg-6">
          <h2>List of Items to Pack</h2>
          @if (Model.Count == 0)
          {
            <p>There are no items in your list yet.</p>
          }
          <ul>
          @foreach (Packer item in Model)
          {
            @if (@item.Packed == false)
            {
              <li><a href='/packers/@item.Id'>@item.Name</a></li>
            }
          }
          </ul>
          <p><a href="/packers/new">Add a new list item</a></p>
        </div>
        <div class="col-lg-6">
          <h2>Items Already Packed</h2>
          @if (Model.Count == 0)
          {
            <p>There are no items in your list yet.</p>
          }
          <ul>
          @foreach (Packer item in Model)
          {
            @if (@item.Packed == true)
            {
              <li><a href='/packers/@item.Id'>@item.Name</a></li>
            }
          }
          </ul>
        </div>
      </div>
    
      <p><a href="/">Back to Homepage</a></p>


      
    </div>
  </body>
</html>